{
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "target": "ESNext",
        "module": "ESNext",
        "allowJs": true,
        "rootDir": "./",
        "baseUrl": ".",
        "strict": true,
        "moduleResolution": "node",
        "paths": {
            "@/*": ["./src/*"]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "exclude": ["node_modules", "**/node_modules/*"]
}
